                Grid.Column="1"
                FontSize="28"
                Foreground="#FF003F6B" 
                FontWeight="Bold"/>-->
            <Image x:Name="BtnLoading"                
                Margin="0,0,0,0" 
                Grid.Column="1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                gif:ImageBehavior.AnimatedSource="/Images/loading.gif"
                Width="260"/>
