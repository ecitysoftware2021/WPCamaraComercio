<Window x:Class="WPCamaraComercio.Views.FrmDetailCompany"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPCamaraComercio.Views"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="FrmDetailCompany" 
        WindowStyle="None"
        WindowState="Maximized"
        Loaded="Window_Loaded"
        Height="2064.095" 
        Width="1250.599">
    <Window.Background>
        <ImageBrush ImageSource="/Images/Backgrounds/fondo2.jpg"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="550" />
            <RowDefinition Height="*" />
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0">
            <Button x:Name="BtnExit"
                   Grid.Column="0"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Center" 
                   Width="200"
                   Height="60" 
                   StylusDown="BtnExit_StylusDown"
                   Margin="0,25,25,0"
                    >
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Buttons/btn_salir.png" Stretch="Fill" />
                </Button.Background>
                <Button.BorderThickness>
                    <Thickness></Thickness>
                </Button.BorderThickness>
            </Button>
            <TextBlock x:Name="tbTimer"
                       FontSize="35"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,0,0,0"/>
            <Button x:Name="BtnBack"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center" 
                   Width="200"
                   Height="60"  
                   Margin="25,25,0,0" 
                   StylusDown="BtnBack_StylusDown"
                   Visibility="Visible">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/Buttons/btn_atras.png" Stretch="Fill" />
                </Button.Background>
                <Button.BorderThickness>
                    <Thickness></Thickness>
                </Button.BorderThickness>
            </Button>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,90,0,0"
                    FontSize="60"                    
                    Grid.ColumnSpan="2"
                    FontWeight="Bold"
                    Foreground="#000"
                    Name="Lbl"
                    Text="Certificados"/>
            <TextBlock VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="120,0,0,0"
                    FontSize="30"                    
                    Grid.ColumnSpan="2"
                    FontWeight="Bold"
                    Foreground="#000"
                    Name="TxbData1"
                    Text="data 1"/>
            <TextBlock VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,120,0"
                    FontSize="30"                    
                    Grid.ColumnSpan="2"
                    FontWeight="Bold"
                    Foreground="#FF840000"
                    Name="TxbData2"
                    Text="Ver detalles"
                    StylusDown="TxbData2_StylusDown"
                    />
            <Image Source="/Images/Buttons/comerciante.png" 
                   Name="BtnComerciant"
                   Margin="0,300,0,0"
                   Width="400"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   StylusDown="BtnComerciant_StylusDown"
                   />
            <Image Source="/Images/Buttons/establecimiento.png" 
                   Name="BtnEstablish"
                   Margin="0,300,0,0"
                   Width="450"
                   Grid.Column="1"
                   Opacity="0.4"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   StylusDown="BtnEstablish_StylusDown"
                   />
        </Grid>

        <Grid Grid.Row="2" x:Name="GrdMerchant" Grid.Column="0" 
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TbCertificate"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,70,0"
                   Grid.ColumnSpan="2"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="NOMBRE CERTIFICADO"
                   FontSize="30"
                   FontWeight="Bold"   
                   Foreground="#FF003F6B"/>
            <TextBlock x:Name="TbAmountCer"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,0,0"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Text="VALOR"
                FontSize="30"
                Grid.Column="2"
                FontWeight="Bold"   
                Foreground="#FF003F6B"/>
            <TextBlock x:Name="TbQuantityCer"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,30,0"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Text="CANTIDAD"
                FontSize="30"
                Grid.Column="3"
                FontWeight="Bold"   
                Foreground="#FF003F6B"/>
            <ListView x:Name="LvMerchant" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Top"
                  ItemsSource="{Binding}"
                  Margin="0,0,0,0"
                      Grid.Row="1"
                      Grid.ColumnSpan="7"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  AutomationProperties.AutomationId="ItemGridView"
                  AutomationProperties.Name="Grouped Items">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <!--<EventSetter Event="PreviewStylusDown"
                         Handler="ListViewItem_PreviewStylusDown" />-->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter>
                                    </ContentPresenter>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                 HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch">
                            <Grid HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,0"
                                  Width="1000"
                                  Height="80"
                                  Tag="{Binding Tag}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.Background>
                                    <ImageBrush 
                                        Stretch="UniformToFill" />
                                </Grid.Background>
                                <TextBlock Text="{Binding CertificateName}"
                                           FontSize="30"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Left"                                           
                                           VerticalAlignment="Center"
                                           Margin="20,0,90,0"
                                           Grid.ColumnSpan="2"
                                           />
                                <TextBlock Text="{Binding Amount, StringFormat={}{0:C0}}"
                                           FontSize="30"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Grid.Column="2"
                                           Margin="20,0,0,0"/>

                                <ComboBox Grid.Column="3"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Margin="20,0,0,0"
                                          HorizontalContentAlignment="Center"
                                          FontSize="25"
                                          Background="White"
                                          SelectedValuePath="Content"
                                          Tag="{Binding EstablishCertificate}"
                                          SelectionChanged="ComboBox_SelectionChanged"
                                          Width="180"                                          
                                          >
                                    <ComboBoxItem Content="--Seleccione--" Selector.IsSelected="True"></ComboBoxItem>
                                    <ComboBoxItem Content="1"></ComboBoxItem>
                                    <ComboBoxItem Content="2"></ComboBoxItem>
                                    <ComboBoxItem Content="3"></ComboBoxItem>
                                    <ComboBoxItem Content="4"></ComboBoxItem>
                                    <ComboBoxItem Content="5"></ComboBoxItem>
                                </ComboBox>
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Image
                Grid.Column="0"
                HorizontalAlignment="Left" 
                Name="btnPrevV" 
                VerticalAlignment="Top"                
                Margin="30,50,0,0"
                Height="100" Width="100"                
                Visibility="Hidden"/>
            <Image  Grid.Column="1"
                
                Margin="0,50,30,0"
                HorizontalAlignment="Right"
                Name="btnNextV" 
                VerticalAlignment="Top"                
                Height="100" Width="100" 
                Grid.RowSpan="1"
                Visibility="Visible"/>

            <TextBlock Height="20" Visibility="Hidden" Margin="5,0,528,63" Name="tbCurrentPageV" 
                   VerticalAlignment="Bottom"  Grid.Column="1"  />
            <TextBlock Height="22" HorizontalAlignment="Right" Margin="0,0,502,61" Name="textBlock3V" 
                   VerticalAlignment="Bottom" Visibility="Hidden" Width="20" FontWeight="Bold" Text="/" Grid.Column="1"/>
            <TextBlock Height="20" HorizontalAlignment="Right" Visibility="Hidden" Margin="0,0,480,63" Name="tbTotalPageV" 
                   VerticalAlignment="Bottom" Width="28" Grid.Column="1" />
        </Grid>

        <Grid Grid.Row="2" x:Name="GrdEstablish"  Grid.Column="0" 
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="TbEstablish"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,0,0,0"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="ESTABLECIMIENTO"
                   FontSize="30"
                   FontWeight="Bold"   
                   Foreground="#FF003F6B"/>

            <TextBlock x:Name="TbAmount"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,0,0,0"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Text="VALOR"
                   Visibility="Hidden"
                   FontSize="30"
                   Grid.Column="1"
                   FontWeight="Bold"   
                   Foreground="#FF003F6B"/>
            <TextBlock x:Name="TbQuantity"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,0,0"
                Visibility="Hidden"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Text="CANTIDAD"
                FontSize="30"
                Grid.Column="2"
                FontWeight="Bold"   
                Foreground="#FF003F6B"/>
            <TextBlock x:Name="TbDetails"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0,0,0,0"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Text="DETALLES"
                FontSize="30"
                Grid.Column="3"
                FontWeight="Bold"   
                Foreground="#FF003F6B"/>


            <ListView x:Name="LvEstablish" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Top"
                  ItemsSource="{Binding}"
                  Margin="0,0,0,0"
                      Grid.Row="1"
                      Grid.ColumnSpan="7"
                  Background="Transparent"
                  BorderBrush="Transparent"
                  AutomationProperties.AutomationId="ItemGridView"
                  AutomationProperties.Name="Grouped Items">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <!--<EventSetter Event="PreviewStylusDown"
                         Handler="ListViewItemCutotas_PreviewStylusDown" />-->
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListViewItem">
                                    <ContentPresenter>
                                    </ContentPresenter>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListView.ItemContainerStyle>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                 HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" 
                                VerticalAlignment="Stretch" 
                                HorizontalAlignment="Stretch">
                            <Grid x:Name="gridMayor" HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,0,0,0"
                                  Width="1000"
                                  Height="120"
                                  Tag="{Binding Tag}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.Background>
                                    <ImageBrush 
                                        Stretch="Uniform" />
                                </Grid.Background>
                                <Expander Grid.Column="0" Grid.Row="0"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,0"
                                        Grid.ColumnSpan="3"
                                        VerticalAlignment="Top"
                                        IsExpanded="False"
                                        Height="800"
                                        Width="800"
                                        Background="Transparent"
                                        FontSize="30"
                                        FontWeight="Bold"
                                        Expanded="Expander_Expanded"
                                        Collapsed="Expander_Collapsed">
                                    <Expander.Header >
                                        <TextBlock 
                                                   FontSize="20" 
                                                   FontWeight="Bold" >
                                            <Run Foreground="Black" Text="{Binding Establish}"/>
                                            <Run Foreground="#FF840000" Text="     VER ↧ / OCULTAR ↥"/>
                                            </TextBlock>
                                    </Expander.Header>
                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Text ="{Binding Certificate}" 
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="20"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Margin="0,0,0,0"
                                                   Text="{Binding Amount,StringFormat={}{0:C0}}"
                                                   TextAlignment="Center"
                                                   TextWrapping="Wrap"
                                                   FontSize="20"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   />
                                        <ComboBox Grid.Column="2"                                                                                                     
                                                  Margin="0,0,0,0"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Top"
                                                  HorizontalContentAlignment="Center"
                                                  Width="140"
                                                  Background="White"
                                                  SelectionChanged="ComboBox_SelectionChanged"
                                                  SelectedValuePath="Content"
                                                  Tag="{Binding EstablishCertificate}"                                                  
                                                  FontSize="20">
                                            <ComboBoxItem Content="--Seleccione--" Selector.IsSelected="True"></ComboBoxItem>
                                            <ComboBoxItem Content="1"></ComboBoxItem>
                                            <ComboBoxItem Content="2"></ComboBoxItem>
                                            <ComboBoxItem Content="3"></ComboBoxItem>
                                            <ComboBoxItem Content="4"></ComboBoxItem>
                                            <ComboBoxItem Content="5"></ComboBoxItem>
                                        </ComboBox>
                                    </Grid>
                                </Expander>

                                <TextBlock Text="Ver detalle"
                                           FontSize="20"
                                           Tag="{Binding Details}"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"                                           
                                           VerticalAlignment="Top"
                                           Margin="80,0,0,0"
                                           Grid.Column="3"
                                           FontWeight="Bold"
                                           Foreground="#FF840000"
                                           StylusDown="TextBlock_StylusDown" 
                                            />
                            </Grid>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="BtnAcept"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,25,0,0"
                TabIndex="2"
                Grid.Column="1"
                Width="350"
                Height="120"
                StylusDown="BtnAcept_StylusDown">
                <Button.Background>
                    <ImageBrush ImageSource="../Images/Buttons/b-Aceptar.png" Stretch="Fill" />
                </Button.Background>
                <Button.BorderThickness>
                    <Thickness></Thickness>
                </Button.BorderThickness>
            </Button>
            <Image x:Name="BtnLoading"                
                Margin="0,0,0,0" 
                Grid.Column="1"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Width="260"/>
            <!--gif:ImageBehavior.AnimatedSource="/Images/loading.gif"-->

            <!--<TextBlock Name="TxbLoading" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,120" 
                       VerticalAlignment="Center" 
                       Text="Cargando..." 
                       Grid.Row="3" 
                       Grid.Column="1" 
                       FontSize="40" 
                       Foreground="Red"
                   />-->
            <TextBlock Text="Valor Total" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Margin="0,0,0,0" 
                FontSize="50"
                Foreground="#FF003F6B" 
                FontWeight="Bold"/>
            <TextBlock x:Name="lblAmount"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,80,0,0"
                Text="$ 0"
                FontSize="50"
                FontWeight="Bold"/>
        </Grid>
    </Grid>
</Window>