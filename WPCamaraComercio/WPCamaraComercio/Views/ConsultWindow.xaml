<Window x:Class="WPCamaraComercio.Views.ConsultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPCamaraComercio.Views"
        mc:Ignorable="d"
        Title="ConsultWindow" 
        WindowStyle="None"
        WindowState="Maximized"
        Height="2064.095" 
        Width="1250.599"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/Backgrounds/bg-blanck.jpg" Stretch="Fill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="600" />
            <RowDefinition Height="100" />
            <RowDefinition Height="880" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Image x:Name="BtnExit"
                   Source="/Images/Buttons/b-Salir.png"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Width="230"
                   Height="70" 
                   Margin="0,0,20,0"
                   Stretch="Uniform"
                   PreviewStylusDown="BtnExit_PreviewStylusDown"/>
        </Grid>

        <Grid Grid.Row="1">
            <TextBlock TextWrapping="WrapWithOverflow" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Center" 
                    TextAlignment="Center"
                    Text="Buscar por:" 
                    Foreground="Black" 
                    FontSize="55" 
                    FontWeight="Bold" 
                    Margin="70,0,0,150"/>

            <Image  x:Name="chkIdentification"
                    Source="/WPCamaraComercio;component/Images/Others/ok.png"
                    Tag="S"
                    Width="60"
                    Height="60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="0,0,300,150"
                    PreviewStylusDown="chkIdentification_PreviewStylusDown"/>

            <TextBlock TextWrapping="WrapWithOverflow" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    TextAlignment="Center"
                    Text="Identificación" 
                    Foreground="Black" 
                    FontSize="50" 
                    Margin="80,0,0,150"/>

            <Image  x:Name="chkName"
                    Source="/WPCamaraComercio;component/Images/Others/circulo.png"
                    Width="60"
                    Height="60"
                    Tag="N"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,290,150"
                    PreviewStylusDown="chkName_PreviewStylusDown"/>

            <TextBlock TextWrapping="WrapWithOverflow" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Center" 
                    TextAlignment="Center"
                    Text="Nombre" 
                    Foreground="Black" 
                    FontSize="50" 
                    Margin="0,0,100,150"/>

            <TextBlock
                    x:Name="txtTitle"
                    TextWrapping="WrapWithOverflow" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    TextAlignment="Center"
                    Text="Ingrese NIT/Cédula sin dígito de verificación" 
                    Foreground="Black" 
                    FontSize="45" 
                    FontWeight="Bold" 
                    Margin="0,130,0,0"
                    Height="122"
                    Width="850"
                        />

            <TextBox x:Name="TxtIdentificacion" 
                     VerticalAlignment="Bottom" 
                     HorizontalAlignment="Left" 
                     TextAlignment="Center"
                     Margin="100,0,0,10" 
                     Width="500"
                     Height="100" 
                     TextWrapping="Wrap"
                     TabIndex="0"
                     FontSize="35" 
                     Background="#FFE3E3E6" 
                     Foreground="#FF282887"
                     CaretBrush="#FFB2B0B8"
                     GotFocus="Txt_GotFocus"/>

            <Image x:Name="BtnConsultar"
                   Source="../Images/Buttons/b-Consultar.png"
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Width="450"
                   Height="130" 
                   Margin="0,0,100,10" 
                   PreviewStylusDown="BtnConsultar_PreviewStylusDown"/>

        </Grid>

        <Grid Grid.Row="2">
            <TextBlock x:Name="lblTitle"
                   Text="Expedientes" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontWeight="Bold" 
                   FontSize="60" 
                   Foreground="#FF000084"
                   TextWrapping="WrapWithOverflow" FontFamily="Arial"
                   Margin="0,0,0,110"/>

            <TextBlock 
                    Text="Nombre"
                    FontSize="35"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow"
                    Margin="130,50,0,15"
                    Foreground="#FF000084"
                    Height="40"
                    Width="250"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Left" />

            <TextBlock 
                    Text="Fecha Matricula"
                    FontSize="35"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow"
                    Margin="0,50,40,15"
                    Foreground="#FF000084"
                    Height="40"
                    Width="250"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
            <TextBlock 
                    Text="Fecha Renovación"
                    FontSize="35"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow"
                    Margin="430,50,0,15"
                    Foreground="#FF000084"
                    Height="40"
                    Width="250"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Center" />
            <TextBlock 
                    Text="Tipo"
                    FontSize="35"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow"
                    Margin="0,0,10,15"
                    Foreground="#FF000084"
                    Height="40"
                    Width="250"
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right" />
        </Grid>

        <Grid Grid.Row="3">
            <Image
                Grid.Column="0"
                HorizontalAlignment="Left" 
                Name="btnPrev" 
                VerticalAlignment="Bottom"
                Margin="30,0,10,0"
                Height="150" Width="150"
                Visibility="Hidden"
                Source="/Images/Buttons/left.png"
                PreviewStylusDown="btnPrev_PreviewStylusDown"
                />
            <Image  Grid.Column="1"
                Margin="0,0,30,0"
                HorizontalAlignment="Right"
                Name="btnNext" 
                VerticalAlignment="Bottom"
                Height="150" 
                Width="150" 
                Grid.RowSpan="1"
                Visibility="Visible"
                Source="/Images/Buttons/right.png"
                    PreviewStylusDown="btnNext_PreviewStylusDown"
                    />
            <TextBlock Height="20" Visibility="Visible" Margin="540,0,0,33" Name="tbCurrentPage" 
                   VerticalAlignment="Bottom"  Grid.Column="1"  />
            <TextBlock Height="22" HorizontalAlignment="Right" Margin="0,0,502,31" Name="textBlock3" FontSize="10"
                   VerticalAlignment="Bottom" Visibility="Visible" Width="20" FontWeight="Bold" Text="/" Grid.Column="1"/>
            <TextBlock Height="20" HorizontalAlignment="Right" Visibility="Visible" 
                       Margin="0,0,480,33" Name="tbTotalPage" 
                   VerticalAlignment="Bottom" Width="28" Grid.Column="1" />

            <ListView x:Name="lv_Files" 
                      Margin="0,70,0,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    ItemsSource="{Binding}"
                    SelectionChanged="lv_Files_SelectionChanged"
                      >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="1"
                                 HorizontalAlignment="Center"
                                     VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Center"
                            VerticalAlignment="Top" Background="White"
                            Margin="0,10,0,10"
                            Width="1000"
                            Height="40"
                            
                              >

                            <TextBlock 
                                    Text="{Binding nombre}"
                                    FontSize="25"
                                    TextAlignment="Center"
                                    TextWrapping="WrapWithOverflow"
                                    Margin="0,0,0,0"
                                    Foreground="#606060"
                                    Height="40"
                                    Width="400"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Left"
                           />
                            <TextBlock 
                                    Text="{Binding fechamatricula}"
                                    FontSize="25"
                                    TextAlignment="Center"
                                    TextWrapping="WrapWithOverflow"
                                    Margin="0,0,40,0"
                                    Foreground="#606060"
                                    Height="40"
                                    Width="200"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center"
                           />
                            <TextBlock 
                                    Text="{Binding fecharenovacion}"
                                    FontSize="25"
                                    TextAlignment="Center"
                                    TextWrapping="WrapWithOverflow"
                                    Margin="420,0,0,0"
                                    Foreground="#606060"
                                    Height="40"
                                    Width="200"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Center"
                           />
                            <TextBlock 
                                    Text="xxx"
                                    FontSize="25"
                                    TextAlignment="Center"
                                    TextWrapping="WrapWithOverflow"
                                    Margin="0,0,0,0"
                                    Foreground="#606060"
                                    Height="40"
                                    Width="200"
                                    VerticalAlignment="Bottom"
                                    HorizontalAlignment="Right"
                           />

                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="996*"/>
                <ColumnDefinition Width="107*"/>
                <ColumnDefinition Width="85*"/>
                <ColumnDefinition Width="55*"/>
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Window>